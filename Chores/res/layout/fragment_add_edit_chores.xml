<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/med_gray" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" 
        android:background="@color/med_gray">

        <TextView
            android:id="@+id/AddEditChoresFragment_title"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:gravity="center|left"
            android:text="@string/add_edit_chores_title"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <Button
            android:id="@+id/AddEditChoresFragment_Addchore_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/AddEditChoresFragment_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/AddEditChoresFragment_title"
            android:gravity="center"
            android:text="@string/add_edit_chores_add_chore_button_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/AddEditChoresFragment_choresList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
